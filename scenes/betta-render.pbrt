
LookAt 400 -200 0   0 0 0   0 0 1
Rotate -5 0 0 1
Camera "perspective" "float fov" [39]
Film "image"  
"integer xresolution" [400] "integer yresolution" [400]
    "string filename" "betta-render.exr"


Sampler "halton" "integer pixelsamples" [256]

Integrator "path"

WorldBegin

#light
AttributeBegin
Material "matte" "color Kd" [0 0 0]
Translate 150 0  300
AreaLightSource "area"  "color L" [10 10 10] "integer nsamples" [8]
Shape "sphere" "float radius" [50]
AttributeEnd

#light
AttributeBegin
Material "matte" "color Kd" [0 0 0]
Translate 500 0  -50
AreaLightSource "area"  "color L" [10 10 10] "integer nsamples" [8]
Shape "sphere" "float radius" [10]
AttributeEnd

#HDR
AttributeBegin
LightSource "infinite" "integer samples" 8 "string mapname" ["textures/Milkyway_Light.exr"]
AttributeEnd


#floor
AttributeBegin
  Texture "checks" "spectrum" "checkerboard"
          "float uscale" [8] "float vscale" [8]
          "rgb tex1" [.1 .1 .1] "rgb tex2" [.8 .8 .8]
  Material "matte" "texture Kd" "checks"
  Translate 0 0 -140
Shape "trianglemesh" "point P" [ -1000 -1000 0 1000 -1000 0 1000 1000 0 -1000 1000 0 ]
      "float uv" [ 0 0 5 0 5 5 0 5 ]
	"integer indices" [ 0 1 2 2 3 0]
Shape "trianglemesh" "point P" [ -400 -1000 -1000   -400 1000 -1000   -400 1000 1000 -400 -1000 1000 ]
      "float uv" [ 0 0 5 0 5 5 0 5 ]
        "integer indices" [ 0 1 2 2 3 0]
AttributeEnd

#mirror
AttributeBegin
  Translate -150 -100 0
  Rotate  90 0 1 0
  Material "mirror"
  Shape "disk" "float radius" 100
AttributeEnd


#fish
