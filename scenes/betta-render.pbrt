Scale 25 25 25
Rotate 90 1 0 0
Translate 0 0 0
    Texture "normalmap" "float" "imagemap"
        "string filename" ["textures/BETTA_Normal_cleaned.png"]
    Texture "opacitymap" "color" "imagemap"
        "string filename" ["textures/BETTA_Opacity_gradient_2.png"]
    Texture "colormap" "color" "imagemap"
        "string filename" ["textures/BETTA_Base_Color_desatu.png"]
    Texture "heightmap" "color" "imagemap"
        "string filename" ["textures/BETTA_color_bw.png"]

    #Material "newt" "color Kd" [.7 .125 .125] "color Ks" [.1 .1 .1] "float uroughness" .01 "float vroughness" .01 "texture bumpmap" "normalmap" "texture opacity" "opacitymap" "texture color" "colormap" 
    
    Material "fish" "texture Kd" "colormap" "texture Kt" "heightmap" "texture color" "colormap" "float eta" 1 "texture bumpmap" "normalmap" "texture opacity" "opacitymap" "float uroughness" 0.01 "float vroughness" 0.04
    Include "geometry/betta.pbrt" 
AttributeEnd
WorldEnd
